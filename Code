float addition(float N1,float N2)
{
    return N1+N2;
}


float soustraction(float N1,float N2)
{
    return N1-N2;
}


 double multiplication( double N1, double N2)
{
    return N1*N2;
}



double division(double N1,double N2){
    if(N2==0)
    {
        printf("division par zero impossible.\n");

      return -999999999999999;
    }
    else
        {
         return N1/N2;
        }
}


float percentage (float N1)
{   float percntg;
    percntg=N1/100;

    return percntg;

}






float modify_sign(float N1){ 
	 float sign;
      if(N1<0)
    {
        sign=-N1;
    }
    else if(N1>0)
        {
            sign=-N1;
        }
     else
     {
         sign=0;
     }
    return sign;
}





int factorial(int N1)
{
     if(N1==0||N1==0){
        return 1;}


    return N1*factorial(N1-1);
}



float power10_n(float N1)

{
    int pwr=1,i;
    double pwn=1.0;

    if(N1<0)
    {
        for(i=1;i<=-N1;i++)
            {
                pwn=pwn*(1.0/10);
            }
     }   

             return pwn;}

float sin_(float Number){
     float angl=(Number*PI)/180;
  
     return sin(angl);}
     




    

float cos_(float Number){
	
     float angl=(Number*PI)/180;
	
     return cos(angl);}
     
     
     
     
